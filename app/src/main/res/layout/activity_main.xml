<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar"/>

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_main"
        android:gravity="center_vertical"
        android:background="#22000000"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            style="@style/bottom_tab_style"
            android:id="@+id/rb_video"
            android:drawableTop="@drawable/rb_video_selector"
            android:text="本地视频" />
        <RadioButton
            style="@style/bottom_tab_style"
            android:id="@+id/rb_audio"
            android:drawableTop="@drawable/rb_audio_selector"
            android:text="本地音乐" />
        <RadioButton
            style="@style/bottom_tab_style"
            android:id="@+id/rb_net_video"
            android:drawableTop="@drawable/rb_net_video_selector"
            android:textColor="@drawable/text_color_selector"
            android:text="网络视频" />
        <RadioButton
            style="@style/bottom_tab_style"
            android:id="@+id/rb_net_audio"
            android:drawableTop="@drawable/rb_net_audio_selector"
            android:text="网络音乐" />
    </RadioGroup>
</LinearLayout>